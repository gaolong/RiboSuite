params {
    
    params.library_design = "split_umi"
    // Adapter trimming (REQUIRED for cutadapt path)
    adapter_sequence = null   // e.g. AGCTAAGATCGGAAGAGCACACGTCTGAACTCCAGTCAC

    // Ribo-seq length bounds
    min_length = 25
    max_length = 42

    enable_umi            = false

    // umi_tools extract parameters
    umi_extract_method    = "regex"

    // DEFAULT: simple 8nt 5' UMI
    // Equivalent to --bc-pattern NNNNNNNN
    umi_bc_pattern        = '^(?P<umi_1>.{8}).+$'



    // Bowtie2 contaminant index *prefix*
    contam_index = "/data/holwm/home/gaolong/projects/RiboSuite/reference/human/GRCh38/contam/bowtie2_idx/human_contam"

    // STAR genome index directory
    star_index   = "/data/holwm/home/gaolong/projects/RiboSuite/reference/human/GRCh38/star"

    // STAR resources (safe defaults)
    star_cpus   = 1
    star_memory = '32 GB'

    samtools_sort_cpus   = 1
    samtools_sort_memory = '32 GB'

    metagene_window = 50
    metagene_max_tx_per_gene = 1

    outdir = "results"
}

profiles {

    standard {
        process.executor = 'local'
        process.cpus    = 1
        process.memory  = '32 GB'
    }

    hpc {
        process.executor = 'pbs'
        params.star_cpus   = 8
        params.star_memory = '40 GB'
        process.time       = '12h'
    }

    test {
        process.executor = 'local'
        process.cpus     = 1
        process.memory   = '2 GB'
        process.time     = '1h'
        params.star_cpus = 1
        conda.enabled    = true
        params.outdir    = "results_test"
    }
}
